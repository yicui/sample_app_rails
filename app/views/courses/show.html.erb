<p id="notice"><%= notice %></p>

<p>
  <b>Number:</b>
  <%= @course.number %>
</p>

<p>
  <b>Title:</b>
  <%= @course.title %>
</p>

<p>
  <b>Description:</b>
  <%= @course.description %>
</p>

<p>
  <b>Syllabus:</b>
  <%= @course.syllabus %>
</p>

<p>
  <b>Teacher:</b>
  <%= @course.teacher.first_name %> <%= @course.teacher.last_name %>
</p>


<% if current_user.class.name == "Admin" %>
<%= link_to 'Edit', edit_course_path(@course) %> |
<% end %>
<% if ["Admin", "Teacher"].include? current_user.class.name %>
<%= link_to 'Roll', roll_course_path(@course) %> |
<% end %>
<%= link_to 'Back', courses_path %>
